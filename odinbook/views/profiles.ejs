<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="post-body">
    <div class="post-container">
        <div class="board" id="dashboard"></div>
        
          <div class="board" id="profile">
            <h1 class="post-header">PROFILE</h1>
            <br>
              <% if (users && users.length > 0) { %>
                <% users.forEach((user) => { %>
                  <p> <%= user.username %></p>
                  <p> <%= user.createdAt %></p>
                  <h2>Profile Info</h2>
                  <% if (user.profile) { %>
                    <p> <%= user.profile.bio || 'No bio available' %></p>
                    <p> <%= user.profile.location || 'No location available' %></p>
                    <p> <%= user.profile.pronoun || '' %></p>
                    <% if (user.profile.image) { %>
                      <img src="/uploads/<%= user.profile.image %>" alt="Profile Picture" style="width: 100px; height: 100px; border-radius: 50%;">
                    <% } else { %>
                      <p>No profile picture available</p>
                    <% } %>
                  <% } else { %>
                    <p>No profile information available</p>
                  <% } %>
                <% }); %>
              <% } %>

          </div>
        </div>    
</body>
</html>