<script>


// To display the comment form    
document.addEventListener('DOMContentLoaded', () => {
  document.addEventListener('click', async e => {
    // 1Ô∏è‚É£ Show the comment form
    if (e.target.classList.contains('comment-btn')) {
      const postId = e.target.dataset.postId;
      const form = document.querySelector(`.comment-form[data-post-id="${postId}"]`);
      if (form) form.style.display = 'block';

      // Load existing comments (only once)
      const panel = document.querySelector(`.comments-panel[data-post-id="${postId}"]`);
      const list = panel.querySelector('.comments-list');
      if (!list.dataset.loaded) {
        const resp = await fetch(`/home/${postId}/comments`);
        const comments = await resp.json();
        list.innerHTML = comments.map(c => `
          <li><strong>${c.author.name}:</strong> ${c.content}</li>
        `).join('');
        list.dataset.loaded = 'true';
      }
      panel.style.display = 'block';
    }

    // 2Ô∏è‚É£ Hide the form
    if (e.target.classList.contains('cancel-btn')) {
      const form = e.target.closest('.comment-form');
      if (form) form.style.display = 'none';
    }

    // 3Ô∏è‚É£ Submit a new comment (AJAX)
    if (e.target.classList.contains('submit-btn')) {
      const postId = e.target.dataset.postId;
      const textarea = document.querySelector(`.comment-form[data-post-id="${postId}"] textarea`);
      const content = textarea.value.trim();

      if (!content) return;

      const resp = await fetch(`/home/${postId}/comments`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ content })
      });
      const newComment = await resp.json();

      // Append the comment instantly
      const list = document.querySelector(`.comments-panel[data-post-id="${postId}"] .comments-list`);
      list.insertAdjacentHTML('beforeend', `
        <li><strong>${newComment.author.name}:</strong> ${newComment.content}</li>
      `);
      textarea.value = ''; // clear input
    }
  });
}); 


// To like a post
document.body.addEventListener('click', async e => {
  const btn = e.target.closest('.like-btn');
  if (!btn) return;

  const postId = btn.dataset.postId;
  const isLiked = btn.classList.contains('liked');

  try {
    const method = isLiked ? 'DELETE' : 'POST';
    const resp = await fetch(`/posts/${postId}/${isLiked ? 'unlike' : 'like'}`, {
      method,
      headers: { 'Content-Type': 'application/json' }
    });
    const data = await resp.json();

    btn.classList.toggle('liked');
    btn.querySelector('.heart').textContent = `${data.likes}`;

  } catch (err) {
    console.error(err);
  }
  // after the like state updates, fetch the likers list
  const likersResp = await fetch(`/posts/${postId}/likers`);
  const likers = await likersResp.json(); // [{id,1, name:'Ada'}, ‚Ä¶]

  // simple example: dump the names into a modal
  const modal = document.createElement('div');
  modal.className = 'likers-modal';
  modal.innerHTML = `
    <h4>Liked by</h4>
    <ul>${likers.map(u => `<li>${u.name}</li>`).join('')}</ul>
    <button class="close">√ó</button>
  `;
  document.body.appendChild(modal);

  modal.querySelector('.close').addEventListener('click', () => {
    modal.remove();
});

});



// To follow a user
document.addEventListener('click', e => {
  const btn = e.target.closest('.follow-btn');
  if (!btn) return;

  const receiverId = btn.dataset.userId;
  const isFollowing = btn.dataset.following === 'true';

  // Choose endpoint and new text
  const url = isFollowing
    ? `/users/unfollow/${receiverId}`
    : `/users/follow/${receiverId}`;

  const newText = isFollowing ? 'Follow' : 'Unfollow';
  const newState = !isFollowing;

  fetch(url, { method: 'POST'})

  .then(r => r.json())
  .then(data => 
    {
    btn.textContent = data.following ? 'Unfollow' : 'Follow';
    btn.dataset.following = String(data.following);
  })
  .catch(err => console.error(err));
});



</script>
