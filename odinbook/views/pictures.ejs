<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>picture Uploader</title>
   <link rel="stylesheet" href="/styles.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
   <nav>
   <li>
      home
      contact
   </li>
   <li>
      about
   </li>
   </nav>
   <% pictures.forEach(picture => { %>
      <li>
         <h2><%= picture.picturename %></h2> 
         <p>Picture Size: <%= picture.pictureSize %> bytes</p>
         <p>Upload Time: <%= picture.createdAt %></p>
         <img src="<%= `/images/${picture.picturename}` %>" alt="Uploaded Image" style="width: 300px;"/>
         <br>
         <i class="fa fa-heart-o"></i>
         <i class="fa fa-comment-o"></i>

         
         <form action="/pictures/<%= picture.id %>/delete" method="POST" style="display:inline; margin-left: 200px;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this comment?');">Delete</button>
          </form>

          <form action="/pictures/<%= picture.id %>" method="post">
            <input type="hidden" name="_method" value="patch">
            <label for="picturename">Edit:</label>
            <br>
            <input type="text" id="picturename" name="picturename" value="<%= picture.picturename %>">
            <br>
            <button type="submit">Update Picture</button>
          </form>

          
         <button>
            <a href="/pictures/<%= picture.id %>/download">download</a>
         </button>
      </li>
   <% }); %>
   
</body>
</html>

