<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="post-body">
    <div class="post-container">
        <div class="board" id="dashboard"></div>
        
          <div class="board" id="profile">
            <h1 class="post-header">PROFILE</h1>
            <br>
            <% if (profiles && profiles.length > 0) { %>
                <% profiles.forEach((profile) => { %>
                  <a href="/profiles/<%= profile.id %>">
                    <p> <%= profile.user.username %></p>
                    <p> <%= profile.user.createdAt %></p>
                    <h2>Profile Info</h2>
                    <% if (profile) { %>
                      <p> <%= profile.bio || 'No bio available' %></p>
                      <p> <%= profile.location || 'No location available' %></p>
                      <p> <%= profile.pronoun || '' %></p>
                      <% if (profile.image) { %>
                        <img src="/uploads/<%= profile.image %>" alt="Profile Picture" style="width: 100px; height: 100px; border-radius: 50%;">
                      <% } else { %>
                        <p>No profile picture available</p>
                      <% } %>
                    <% } else { %>
                      <p>No profile information available</p>
                    <% } %>
                  </a>
                <% }); %>
              <% } %>
              
            </div>
        </div>    
</body>
</html>


